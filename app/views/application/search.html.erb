<br/><br/><br/>
<% if @customers.length > 0 then %>
<center><h3>Customers found</h3></center>
<table class="table table-striped table-hover">
<thead>
    <tr>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Address</th>
        <th>Phone</th>
        <th>Mobile</th>
        <th>Email</th>
        <th>Date Added</th>
    </tr>
</thead>
<tbody>
<% for customer in @customers %>
	<tr>
		<td><%= customer.first_name %></td>
		<td><%= customer.last_name %></td>
		<td><%= customer.address %></td>
		<td><%= customer.phone %></td>
		<td><%= customer.mobile %></td>
		<td><%= customer.created_at.strftime("%d/%m/%Y") %></td>
		<td><%= customer.email %></td>
	</tr>
<% end %>
</tbody>
</table>
<% else %>
<center><h3>No customers found</h3></center>
<% end %>

<% if @items.length > 0 then %>
<center><h3>Items found</h3></center>
<table class="table table-striped table-hover">
<thead>
                  <tr>
                    <th>Item Name</th>
                    <th>Description</th>
                    <th>Quantity</th>
                    <th>Item Number 1</th>
                    <th>Item Number 2</th>
                    <th>Price paid ($)</th>
                    <th>Retail price ($)</th>
                    <th>Notes</th>
                  </tr>
                </thead>
<tbody>
<% for  item in @items %>
	<tr>
		<td><%= item.name %></td>
		<td><%= item.description %></td>
		<td><%= item.quantity %></td>
		<td><%= item.item_number_one%></td>
		<td><%= item.item_number_two%></td>
		<td><%= item.price %></td>
		<td><%= item.retail_price %></td>
		<td><%= item.notes %></td>
	</tr>
<% end %>
</tbody>
</table>
<% else %>
<center><h3>No items found</h3></center>
<% end %>